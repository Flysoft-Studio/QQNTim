{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ESNext",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "exactOptionalPropertyTypes": true,
        "outDir": "dist",
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/node_modules/*"]
}
